@{
    @model firstApp.Models.Person
}
@{
    ViewBag.Title = "onePerson";
}
<link rel="stylesheet" runat="server" media="screen" href="~/Content/onePerson.css" />

@{ firstApp.Models.Person per = Model;
    if (per == null)
    {
        <div class="d-flex align-items-center justify-content-center vh-100">
            <div class="text-center">
                <h1 class="display-1 fw-bold">404</h1>
                <p class="fs-3"> <span class="text-danger">Opps!</span> Page not found.</p>
                <p class="lead">
                    Id unavailable
                </p>
                <a href="index.html" class="btn btn-primary">Go Home</a>
            </div>
        </div>
    }
    else
    {
        <div class="padding">
            <div class="col-md-8">
                <!-- Column -->
                <div class="card">
                    <img class="card-img-top" src="https://i.imgur.com/K7A78We.jpg" alt="Card image cap">
                    <div class="card-body little-profile text-center">
                        <div class="pro-img"><img src="@per.image" alt="user"></div>
                        <h3 class="m-b-0">@per.first_name  @per.last_name</h3>
                        <p>@per.email</p> 
                        <div class="row text-center m-t-20">
                            <div class="col-lg-4 col-md-4 m-t-20">
                                <h3 class="m-b-0 font-light">@per.country</h3><small>country</small>
                            </div>
                            <div class="col-lg-4 col-md-4 m-t-20">
                                <h3 class="m-b-0 font-light">434K</h3><small>Birthdate</small>
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    }